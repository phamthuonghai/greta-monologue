<?xml version="1.0" encoding="UTF-8"?>
<!-- min and max of each amount in degree-->
<TorsoAmount>

		<VerticalTurn>
			<vertical_amount direction="Right">
				<min>0</min>
				<max>45</max>
			</vertical_amount>
			
			<vertical_amount direction="Left">
				<min>0</min>
				<max>45</max>
			</vertical_amount>
		</VerticalTurn>
		
		<SagittalLean>
			<sagittal_amount direction="Forward">
				<min>0</min>
				<max>45</max>
			</sagittal_amount>
			
			<sagittal_amount direction="Backward">
				<min>0</min>
				<max>45</max>
			</sagittal_amount>
		</SagittalLean>
		
		<LateralLean>
			<lateral_amount direction="Left">
				<min>0</min>
				<max>45</max>
			</lateral_amount>
			
			<lateral_amount direction="right">
				<min>0</min>
				<max>45</max>
			</lateral_amount>
		</LateralLean>
		
		<Collapse direction="Downward">
			<collapse_amount>
				<min>0</min> <!--Check if we can apply a negatif value of rotation-->
				<max>30</max>
			</collapse_amount>
		</Collapse>
		
</TorsoAmount>